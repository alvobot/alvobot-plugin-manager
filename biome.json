{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"files": {
		"includes": [
			"**/includes/**/*.js",
			"**/includes/**/*.css",
			"**/assets/**/*.js",
			"**/assets/**/*.css",
			"!**/vendor",
			"!**/node_modules",
			"!**/*.min.js",
			"!**/*.min.css"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedFunctionParameters": "off",
				"noInnerDeclarations": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noVar": "off",
				"noRedundantUseStrict": "warn"
			},
			"complexity": {
				"useArrowFunction": "off",
				"noImportantStyles": "off"
			},
			"style": {
				"useConst": "off",
				"useTemplate": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always"
		}
	},
	"css": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
